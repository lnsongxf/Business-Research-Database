[{"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "A Reconsideration of the Twentieth Century", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.327", "ex:pages": "327-340", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Robert A. Mundell"}]}, {"ex:issue": "3", "ex:abstract": "Saving and growth are strongly positively correlated across countries. Recent empirical evidence suggests that this correlation holds largely because high growth leads to high saving, not the other way around. This evidence is difficult to reconcile with standard growth models, since forward-looking consumers with standard utility should save less in a fast-growing economy because they know they will be richer in the future than they are today. We show that if utility depends partly on how consumption compares to a \"habit stock\" determined by past consumption, an otherwise-standard growth model can imply that increases in growth can cause increased saving.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Saving and Growth with Habit Formation", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.341", "ex:pages": "341-355", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jody Overland"}, {"ex:name": "Christopher D. Carroll"}, {"ex:name": "David N. Weil"}]}, {"ex:issue": "3", "ex:abstract": "This paper examines the role for tax policies in productivity-shock driven economies with catching-up-with-the-Joneses utility functions. The optimal tax policy is shown to affect the economy countercyclically via procyclical taxes, i.e., \"cooling down\" the economy with higher taxes when it is \"overheating\" in booms and \"stimulating\" the economy with lower taxes in recessions to keep consumption up. Thus, models with catching-up-with-the-Joneses utility functions call for traditional Keynesian demand-management policies but for rather unorthodox reasons.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Tax Policy and Aggregate Demand Management under Catching Up with the Joneses", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.356", "ex:pages": "356-366", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Harald Uhlig"}, {"ex:name": "Lars Ljungqvist"}]}, {"ex:issue": "3", "ex:abstract": "This paper explores a monetary-policy model with habit formation for consumers, in which consumers' utility depends in part on current consumption relative to past consumption. The empirical tests developed in the paper show that one can reject the hypothesis of no habit formation with tremendous confidence, largely because the habit-formation model captures the gradual hump-shaped response of real spending to various shocks. The paper then embeds the habit-consumption specification in a monetary-policy model and finds that the responses of both spending and inflation to monetary-policy actions are significantly improved by this modification.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Habit Formation in Consumption and Its Implications for Monetary-Policy Models", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.367", "ex:pages": "367-390", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jeffrey C. Fuhrer"}]}, {"ex:issue": "3", "ex:abstract": "This paper tests for the presence of habit formation using household data. A simple model of habit formation implies a condition relating the strength of habits to the evolution of consumption over time. When the condition is estimated with food consumption data from the Panel Study on Income Dynamics (PSID), the results yield no evidence of habit formation at the annual frequency. This finding is robust to a number of changes in the specification. It also holds for several proxies for nondurables and services consumption created by combining PSID variables with weights estimated from Consumer Expenditure Survey data.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Habit Formation in Consumer Preferences: Evidence from Panel Data", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.391", "ex:pages": "391-406", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Karen E. Dynan"}]}, {"ex:issue": "3", "ex:abstract": "We study the monetary-transmission mechanism with a data set that includes quarterly observations of every insured U.S. commercial bank from 1976 to 1993. We find that the impact of monetary policy on lending is stronger for banks with less liquid balance sheets--i.e., banks with lower ratios of securities to assets. Moreover, this pattern is largely attributable to the smaller banks, those in the bottom 95 percent of the size distribution. Our results support the existence of a \"bank lending channel\" of monetary transmission, though they do not allow us to make precise statements about its quantitative importance.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "What Do a Million Observations on Banks Say about the Transmission of Monetary Policy?", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.407", "ex:pages": "407-428", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jeremy C. Stein"}, {"ex:name": "Anil K. Kashyap"}]}, {"ex:issue": "3", "ex:abstract": "This paper tests for the existence of asymmetric information between the Federal Reserve and the public by examining Federal Reserve and commercial inflation forecasts. It demonstrates that the Federal Reserve has considerable information about inflation beyond what is known to commercial forecasters. It also shows that monetary-policy actions provide signals of the Federal Reserve's information and that commercial forecasters modify their forecasts in response to those signals. These findings may explain why long-term interest rates typically rise in response to shifts to tighter monetary policy.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Federal Reserve Information and the Behavior of Interest Rates", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.429", "ex:pages": "429-457", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "David H. Romer"}, {"ex:name": "Christina D. Romer"}]}, {"ex:issue": "3", "ex:abstract": "The countercyclical pattern of inventory-sales ratios is a striking feature of inventory behavior. In a model where inventories are productive for sales, both the markup of price over marginal cost and expected changes in marginal cost are key determinants of that ratio. This paper argues that costly variation in factor utilization gives rise to countercyclical markups in production-to-stock manufacturing industries. Time markup turns out to be more important than intertemporal substitution in explaining the behavior of inventory-sales ratios.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "What Inventory Behavior Tells Us about Business Cycles", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.458", "ex:pages": "458-481", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "James A. Kahn"}, {"ex:name": "Mark Bils"}]}, {"ex:issue": "3", "ex:abstract": "This paper considers propagation of aggregate shocks in a dynamic general-equilibrium model with labor-market matching and endogenous job destruction. Cyclical fluctuations in the job-destruction rate magnify the output effects of shocks, as well as making them much more persistent. Interactions between capital adjustment and the job-destruction rate play an important role in generating persistence. Propagation effects are shown to be quantitatively substantial when the model is calibrated using job-flow data. incorporating costly capital adjustment leads to significantly greater propagation.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Job Destruction and Propagation of Shocks", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.482", "ex:pages": "482-498", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Garey Ramey"}, {"ex:name": "Wouter J. den Haan"}, {"ex:name": "Joel Watson"}]}, {"ex:issue": "3", "ex:abstract": "The tension between allocative efficiency and information aggregation is explored in the context of an auction: k identical objects of unknown quality are auctioned off to n bidders whose tastes affect their valuation of an object of given quality. Bidders receive a signal about the quality of the objects. The k highest bidders get an object and pay a price equal to the k + first highest bid. We find conditions under which, in the limit, objects are allocated efficiently to those with the highest tastes, and price converges in probability to the value of an object to the marginal taste type.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Efficiency and Information Aggregation in Auctions", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.499", "ex:pages": "499-525", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jeroen M. Swinkels"}, {"ex:name": "Wolfgang Pesendorfer"}]}, {"ex:issue": "3", "ex:abstract": "The effect of insecure ownership on ordinary investment and natural resource use is examined. Insecure ownership is postulated to depend on the type of government regime in power and the prevalence of political violence or instability. The political determinants of economy-wide investment are estimated from cross-country data, and the results are used to form an index of ownership security. When introduced into empirical models of natural resource use, this index has a significant and quantitatively important effect on the use of forests and petroleum. Contrary to conventional wisdom, ownership risk slows resource use in some circumstances.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Ownership Risk, Investment, and the Use of Natural Resources", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.526", "ex:pages": "526-549", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Robert T. Deacon"}, {"ex:name": "Henning Bohn"}]}, {"ex:issue": "3", "ex:abstract": "This paper presents a dynamic model, inspired by evolutionary game theory, of how standards and norms emerge in decentralized economies. It shows that standardization outcomes depend on adopters' attitudes to problems caused by incompatibility. If individuals display aversion to incompatibility, standardization never fails to happen eventually, but societies sometimes end up picking inferior standards. In this case, official action can be useful to quickly achieve sensible standardization. On the other hand, when individuals display tolerance or neutrality to incompatibility, there is neither path-dependency nor a lock-in problem, and regulation seems a poor alternative to laissez-faire.", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Standardization in Decentralized Economies", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.550", "ex:pages": "550-570", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Michel Benaim"}, {"ex:name": "Emmanuelle Auriol"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "The Labeling Effect of a Child Benefit System", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.571", "ex:pages": "571-583", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Peter Kooreman"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "A Time-Series Analysis of Crime, Deterrence, and Drug Abuse in New York City", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.584", "ex:pages": "584-604", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "H. Naci Mocan"}, {"ex:name": "Hope Corman"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "A Theory of Rigid Extremists and Flexible Moderates with an Application to the U.S. Congress", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.605", "ex:pages": "605-620", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Joseph E. Harrington"}, {"ex:name": "S. Brock Blomberg"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Sovereign Debt as Intertemporal Barter", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.621", "ex:pages": "621-639", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Brian D. Wright"}, {"ex:name": "Kenneth M. Kletzer"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Role Models and Arguments for Affirmative Action", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.640", "ex:pages": "640-648", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Kim-Sau Chung"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Political Influence and the Dynamic Consistency of Policy", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.649", "ex:pages": "649-666", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jaewoo Lee"}, {"ex:name": "Michelle R. Garfinkel"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "The Role of a Variable Input in the Relationship between Investment and Uncertainty", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.667", "ex:pages": "667-680", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Kwanho Shin"}, {"ex:name": "Jaewoo Lee"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Optimal Income Taxation: An Example with a U-Shaped Pattern of Optimal Marginal Tax Rates: Comment", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.681", "ex:pages": "681-686", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Michel Strawczynski"}, {"ex:name": "Momi Dahan"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Capital Mobility in NeoClassical Models of Growth: Comment", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.687", "ex:pages": "687-694", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Petr Duczynski"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Herd Behavior and Investment: Comment", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.695", "ex:pages": "695-704", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Peter Sorensen"}, {"ex:name": "Marco Ottaviani"}]}, {"ex:issue": "3", "ex:volume": "90", "ex:source": "American Economic Review", "ex:title": "Herd Behavior and Investment: Reply", "ex:url": "http://www.aeaweb.org/articles.php?doi=10.1257/aer.90.3.705", "ex:pages": "705-706", "@context": {"dc": "http://schema.org/"}, "ex:template": "Template-Type: ReDIF-Article 1.0", "ex:date": "2000", "ex:keyword": [], "ex:creator": [{"ex:name": "Jeremy C. Stein"}, {"ex:name": "David S. Scharfstein"}]}]