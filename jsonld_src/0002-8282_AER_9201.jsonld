[{"e:author": ["Sherwin Rosen"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015577", "e:keyword": [], "e:pages": "1-15", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015577", "e:year": 2002, "e:title": "Markets and Diversity", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Brian L. Goff", "Robert E. McCormick", "Robert D. Tollison"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015586", "e:keyword": [], "e:pages": "16-26", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015586", "e:year": 2002, "e:title": "Racial Integration as an Innovation: Empirical Evidence from Sports Leagues", "e:journal": "American Economic Review", "e:abstract": "This paper treats racial integration as an innovation in economic process in which economic entities find it advantageous to utilize potentially more productive inputs previously unavailable due to law, custom, or managerial discretion. Data on the racial integration of Major League Baseball and Atlantic Coast Conference basketball are employed to address this issue. The central question examined is which type of team integrated first&mdash;losers or winners? The results strongly support the idea that entrepreneurship trumps competitive rivalry; that is, winning teams led the process of racial integration."}, {"e:author": ["Dan Black", "Kermit Daniel", "Seth Sanders"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015595", "e:keyword": [], "e:pages": "27-50", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015595", "e:year": 2002, "e:title": "The Impact of Economic Conditions on Participation in Disability Programs: Evidence from the Coal Boom and Bust", "e:journal": "American Economic Review", "e:abstract": "We examine the impact of the coal boom of the 1970's and the coal bust of the 1980's on disability program participation. These shocks provide clear evidence that as the value of labor-market participation increases, disability program participation falls. For the Disability Insurance program, the elasticity of payments with respect to local earnings is between &ndash;0.3 and &ndash;0.4 and for Supplemental Security Income the elasticity is between &ndash;0.4 and &ndash;0.7. Consistent with a model where qualifying for disability programs is costly, the relationship between economic conditions and program participation is much stronger for permanent than for transitory economic shocks. (JEL, J0, H0)"}, {"e:author": ["Paul Gertler", "Jonathan Gruber"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015603", "e:keyword": [], "e:pages": "51-70", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015603", "e:year": 2002, "e:title": "Insuring Consumption Against Illness", "e:journal": "American Economic Review", "e:abstract": "One of the most sizable and least predictable shocks to economic opportunities in developing countries is major illness. We investigate the extent to which families are able to insure consumption against major illness using a unique panel data set from Indonesia that combines excellent measures of health status with consumption information. We find that there are significant economic costs associated with major illness, and that there is very imperfect insurance of consumption over illness episodes. These estimates suggest that public disability insurance or subsidies for medical care may improve welfare by providing consumption insurance. (JEL O0, H1)"}, {"e:author": ["Brian Knight"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015612", "e:keyword": [], "e:pages": "71-92", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015612", "e:year": 2002, "e:title": "Endogenous Federal Grants and Crowd-out of State Government Spending: Theory and Evidence from the Federal Highway Aid Program", "e:journal": "American Economic Review", "e:abstract": "Contrary to simple theoretical predictions, existing evidence suggests that federal grants do not crowd out state government spending. A legislative bargaining model with endogenous grants documents a positive correlation between grant receipts and preferences for public goods; this correlation has likely biased existing work against measuring crowd-out. To correct for such endogeneity, the model motivates instruments based on the political power of state congressional delegations. Exploiting this exogenous variation in grants, the instrumental variables estimator reports crowd-out that is statistically and economically significant. This endogeneity may explain the flypaper effect, a nonequivalence between grant receipts and private income. (JEL D70, H40, H77)"}, {"e:author": ["Werner Antweiler", "Daniel Trefler"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015621", "e:keyword": [], "e:pages": "93-119", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015621", "e:year": 2002, "e:title": "Increasing Returns and All That: A View from Trade", "e:journal": "American Economic Review", "e:abstract": "Do scale economies help to explain international trade flows? Using a large database on output, trade flows, and factor endowments, we find that allowing for the presence of increasing returns to scale in production significantly increases our ability to predict international trade flows. In particular, using trade data, we find that a third of all goods-producing industries are characterized by increasing returns to scale. Thus, scale economies are a quantifiable and important source of comparative advantage. (JEL F11, F12, D2)"}, {"e:author": ["Wolfgang Keller"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015630", "e:keyword": [], "e:pages": "120-142", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015630", "e:year": 2002, "e:title": "Geographic Localization of International Technology Diffusion", "e:journal": "American Economic Review", "e:abstract": "Income convergence across countries turns on whether technological knowledge spillovers are global or local. I estimate the amount of spillovers from R&amp;D expenditures on a geographic basis, using a new data set which encompasses most of the world's innovative activity between 1970 and 1995. I find that technology is to a substantial degree local, not global, as the benefits from spillovers are declining with distance. The distance at which the amount of spillovers is halved is about 1,200 kilometers. I also find that over time, technological knowledge has become considerably more global. Moreover, language skills are important for spillover diffusion. (JEL F0, O1, O3)"}, {"e:author": ["Lee G. Branstetter", "Mariko Sakakibara"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015649", "e:keyword": [], "e:pages": "143-159", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015649", "e:year": 2002, "e:title": "When Do Research Consortia Work Well and Why? Evidence from Japanese Panel Data", "e:journal": "American Economic Review", "e:abstract": "We examine the impact of a large number of Japanese government-sponsored research consortia on the research productivity of participating firms by measuring their patenting in the targeted technologies before, during, and after participation. Consistent with the predictions of the theoretical literature on research consortia, we find consortium outcomes are positively associated with the level of potential R&amp;D spillovers within the consortium and (weakly) negatively associated with the degree of product market competition among consortium members. Furthermore, our evidence suggests that consortia are most effective when they focus on basic research. (JEL O32, O31, L52)"}, {"e:author": ["David Popp"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015658", "e:keyword": [], "e:pages": "160-180", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015658", "e:year": 2002, "e:title": "Induced Innovation and Energy Prices", "e:journal": "American Economic Review", "e:abstract": "I use U.S. patent data from 1970 to 1994 to estimate the effect of energy prices on energy-efficient innovations. Using patent citations to construct a measure of the usefulness of the existing base of scientific knowledge, I consider the effect of both demand-side factors, which spur innovative activity by increasing the value of new innovations, and supply-side factors, such as scientific advancements that make new innovations possible. I find that both energy prices and the quality of existing knowledge have strongly significant positive effects on innovation. Furthermore, I show that omitting the quality of knowledge adversely affects the estimation results. (JEL O31, Q40, Q42)"}, {"e:author": ["Marcelo L. Veracierto"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015667", "e:keyword": [], "e:pages": "181-197", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015667", "e:year": 2002, "e:title": "Plant-Level Irreversible Investment and Equilibrium Business Cycles", "e:journal": "American Economic Review", "e:abstract": "This paper evaluates the importance of microeconomic irreversibilities for aggregate dynamics using a real-business-cycle (RBC) model characterized by investment irreversibilities at the establishment level. The main finding is that investment irreversibilities do not play a significant role in an otherwise standard realbusiness-cycle model: Even though investment irreversibilities are crucial for establishment-level dynamics, aggregate fluctuations are basically the same under fully flexible or completely irreversible investment. (JEL E22, E32)"}, {"e:author": ["Lutz Hendricks"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015676", "e:keyword": [], "e:pages": "198-219", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015676", "e:year": 2002, "e:title": "How Important Is Human Capital for Development? Evidence from Immigrant Earnings", "e:journal": "American Economic Review", "e:abstract": "This paper offers new evidence on the sources of cross-country income differences. It exploits the idea that observing immigrant workers from different countries in the same labor market provides an opportunity to estimate their human-capital endowments. These estimates suggest that human and physical capital account for only a fraction of cross-country income differences. For countries below 40 percent of U.S. output per worker, less than half of the output gap relative to the United States is attributed to human and physical capital. (JEL O15, O41, F22)"}, {"e:author": ["Charles I. Jones"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015685", "e:keyword": [], "e:pages": "220-239", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015685", "e:year": 2002, "e:title": "Sources of U.S. Economic Growth in a World of Ideas", "e:journal": "American Economic Review", "e:abstract": "Rising educational attainment and research intensity in recent decades suggest that the U.S. economy is far from its steady state. This paper develops a model reconciling these facts with the stability of U.S. growth rates. In the model, long-run growth arises from the worldwide discovery of ideas, which depends on population growth. Nevertheless, constant growth can temporarily proceed at a faster rate, provided research intensity and educational attainment rise steadily over time. Growth accounting reveals that these factors explain 80 percent of recent U.S. growth, with less than 20 percent coming from world population growth. (JEL O40, E10)"}, {"e:author": ["Bruno Biais", "Enrico Perotti"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015694", "e:keyword": [], "e:pages": "240-258", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015694", "e:year": 2002, "e:title": "Machiavellian Privatization", "e:journal": "American Economic Review", "e:abstract": "We analyze politically motivated privatization in a bipartisan environment. When median-class voters a priori favor redistributive policies, a strategic privatization program allocating them enough shares can induce a voting shift away from left-wing parties whose policy would reduce the value of shareholdings. To induce median-class voters to buy enough shares to shift political preferences, strategic rationing and underpricing is often necessary. In the extreme, this may lead to free share distribution and voucher privatization. Shifting voting preferences becomes impossible when strong ex ante political constraints require large upfront transfers to insiders or when social inequality is extreme. (JEL D72, L33, P16, P35)"}, {"e:author": ["Mark J. McCabe"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015702", "e:keyword": [], "e:pages": "259-269", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015702", "e:year": 2002, "e:title": "Journal Pricing and Mergers: A Portfolio Approach", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["David W. Harless", "George E. Hoffer"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015711", "e:keyword": [], "e:pages": "270-279", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015711", "e:year": 2002, "e:title": "Do Women Pay More for New Vehicles? Evidence from Transaction Price Data", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Thomas Buchmueller", "John Dinardo"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015720", "e:keyword": [], "e:pages": "280-294", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015720", "e:year": 2002, "e:title": "Did Community Rating Induce an Adverse Selection Death Spiral? Evidence from New York, Pennsylvania, and Connecticut", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Darius Lakdawalla", "Tomas Philipson"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015739", "e:keyword": [], "e:pages": "295-306", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015739", "e:year": 2002, "e:title": "The Rise in Old-Age Longevity and the Market for Long-Term Care", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Jonah B. Gelbach"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015748", "e:keyword": [], "e:pages": "307-322", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015748", "e:year": 2002, "e:title": "Public Schooling for Young Children and Maternal Labor Supply", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Jere R. Behrman", "Mark R. Rosenzweig"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015757", "e:keyword": [], "e:pages": "323-334", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015757", "e:year": 2002, "e:title": "Does Increasing Women's Schooling Raise the Schooling of the Next Generation?", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Laura Chadwick", "Gary Solon"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015766", "e:keyword": [], "e:pages": "335-344", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015766", "e:year": 2002, "e:title": "Intergenerational Income Mobility Among Daughters", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Marjorie Flavin", "Takashi Yamashita"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015775", "e:keyword": [], "e:pages": "345-362", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015775", "e:year": 2002, "e:title": "Owner-Occupied Housing and the Composition of the Household Portfolio", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Michael J. Keen", "Christos Kotsogiannis"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015784", "e:keyword": [], "e:pages": "363-370", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015784", "e:year": 2002, "e:title": "Does Federalism Lead to Excessively High Taxes?", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Gerald E. Auten", "Holger Sieg", "Charles T. Clotfelter"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015793", "e:keyword": [], "e:pages": "371-382", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015793", "e:year": 2002, "e:title": "Charitable Giving, Income, and Taxes: An Analysis of Panel Data", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Antoni Estevadeordal", "Alan M. Taylor"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015801", "e:keyword": [], "e:pages": "383-393", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015801", "e:year": 2002, "e:title": "A Century of Missing Trade?", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Patrick J. Conway"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015810", "e:keyword": [], "e:pages": "394-404", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015810", "e:year": 2002, "e:title": "The Case of the Missing Trade and Other Mysteries: Comment", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Daniel Trefler"], "e:volume": "92", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015829", "e:keyword": [], "e:pages": "405-410", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282802760015829", "e:year": 2002, "e:title": "The Case of the Missing Trade and Other Mysteries: Reply", "e:journal": "American Economic Review", "e:issue": "1"}]