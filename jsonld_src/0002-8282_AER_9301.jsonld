[{"e:author": ["Robert E. Lucas Jr."], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455133", "e:keyword": [], "e:pages": "1-14", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455133", "e:year": 2003, "e:title": "Macroeconomic Priorities", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Judith A. Chevalier", "Anil K. Kashyap", "Peter E. Rossi"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455142", "e:keyword": [], "e:pages": "15-37", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455142", "e:year": 2003, "e:title": "Why Don't Prices Rise During Periods of Peak Demand? Evidence from Scanner Data", "e:journal": "American Economic Review", "e:abstract": "We examine retail and wholesale prices for a large supermarket chain over seven and one-half years. We find that prices fall on average during seasonal demand peaks for a product, largely due to changes in retail margins. Retail margins for specific goods fall during peak demand periods for that good, even if these periods do not coincide with aggregate demand peaks for the retailer. This is consistent with \"loss-leader\" models of retailer competition. Models stressing cyclical demand elasticities or cyclical firm conduct are less consistent with our findings. Manufacturer behavior plays a limited role in the countercyclicality of prices."}, {"e:author": ["Torben G. Andersen", "Tim Bollerslev", "Francis X. Diebold", "Clara Vega"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455151", "e:keyword": [], "e:pages": "38-62", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455151", "e:year": 2003, "e:title": "Micro Effects of Macro Announcements: Real-Time Price Discovery in Foreign Exchange", "e:journal": "American Economic Review", "e:abstract": "Using a new data set consisting of six years of real-time exchange-rate quotations, macroeconomic expectations, and macroeconomic realizations, we characterize the conditional means of U.S. dollar spot exchange rates. In particular, we find that announcement surprises produce conditional mean jumps; hence high-frequency exchange-rate dynamics are linked to fundamentals. The details of the linkage are intriguing and include announcement timing and sign effects. The sign effect refers to the fact that the market reacts to news in an asymmetric fashion: bad news has greater impact than good news, which we relate to recent theoretical work on information processing and price discovery."}, {"e:author": ["Jean Imbs", "Romain Wacziarg"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455160", "e:keyword": [], "e:pages": "63-86", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455160", "e:year": 2003, "e:title": "Stages of Diversification", "e:journal": "American Economic Review", "e:abstract": "This paper studies the evolution of sectoral concentration in relation to the level of per capita income. We show that various measures of sectoral concentration follow a U-shaped pattern across a wide variety of data sources: countries first diversify, in the sense that economic activity is spread more equally across sectors, but there exists, relatively late in the development process, a point at which they start specializing again. We discuss this finding in light of existing theories of trade and growth, which generally predict a monotonic relationship between income and diversification."}, {"e:author": ["John Hassler", "Jos V. Rodrguez Mora", "Kjetil Storesletten", "Fabrizio Zilibotti"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455179", "e:keyword": [], "e:pages": "87-112", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455179", "e:year": 2003, "e:title": "The Survival of the Welfare State", "e:journal": "American Economic Review", "e:abstract": "This paper provides an analytical characterization of Markov perfect equilibria in a model with repeated voting, where agents vote over distortionary income redistribution. A key result is that the future constituency for redistributive policies depends positively on current redistribution, since this affects both private investments and the future distribution of voters. The model features multiple equilibria. In some equilibria, positive redistribution persists forever. In other equilibria, even a majority of beneficiaries of redistribution vote strategically so as to induce the end of the welfare state next period. Skill-biased technical change makes the survival of the welfare state less likely."}, {"e:author": ["Alberto Abadie", "Javier Gardeazabal"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455188", "e:keyword": [], "e:pages": "113-132", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455188", "e:year": 2003, "e:title": "The Economic Costs of Conflict: A Case Study of the Basque Country", "e:journal": "American Economic Review", "e:abstract": "This article investigates the economic effects of conflict, using the terrorist conflict in the Basque Country as a case study. We find that, after the outbreak of terrorism in the late 1960's, per capita GDP in the Basque Country declined about 10 percentage points relative to a synthetic control region without terrorism. In addition, we use the 1998-1999 truce as a natural experiment. We find that stocks of firms with a significant part of their business in the Basque Country showed a positive relative performance when truce became credible, and a negative relative performance at the end of the cease-fire."}, {"e:author": ["Vincent P. Crawford"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455197", "e:keyword": [], "e:pages": "133-149", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455197", "e:year": 2003, "e:title": "Lying for Strategic Advantage: Rational and Boundedly Rational Misrepresentation of Intentions", "e:journal": "American Economic Review", "e:abstract": "Starting from an example of the Allies' decision to feint at Calais and attack Normandy on D-Day, this paper models misrepresentation of intentions to competitors or enemies. Allowing for the possibility of bounded strategic rationality and rational players' responses to it yields a sensible account of lying via costless, noiseless messages. In some leading cases, the model has generically unique pure-strategy sequential equilibria, in which rational players exploit boundedly rational players, but are not themselves fooled. In others, the model has generically essentially unique mixed-strategy sequential equilibria, in which rational players' strategies protect all players from exploitation."}, {"e:author": ["Arthur J. Robson", "Hillard S. Kaplan"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455205", "e:keyword": [], "e:pages": "150-169", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455205", "e:year": 2003, "e:title": "The Evolution of Human Life Expectancy and Intelligence in Hunter-Gatherer Economies", "e:journal": "American Economic Review", "e:abstract": "The economics of hunting and gathering must have driven the biological evolution of human characteristics, since hunter-gatherer societies prevailed for the two million years of human history. These societies feature huge intergenerational resource flows, suggesting that these resource flows should replace fertility as the key demographic consideration. It is then theoretically expected that life expectancy and brain size would increase simultaneously, as apparently occurred during our evolutionary history. The brain here is considered as a direct form of bodily investment, but also crucially as facilitating further indirect investment by means of learning-by-doing."}, {"e:author": ["James E. Anderson", "Eric van Wincoop"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455214", "e:keyword": [], "e:pages": "170-192", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455214", "e:year": 2003, "e:title": "Gravity with Gravitas: A Solution to the Border Puzzle", "e:journal": "American Economic Review", "e:abstract": "Gravity equations have been widely used to infer trade flow effects of various institutional arrangements. We show that estimated gravity equations do not have a theoretical foundation. This implies both that estimation suffers from omitted variables bias and that comparative statics analysis is unfounded. We develop a method that (i) consistently and efficiently estimates a theoretical gravity equation and (ii) correctly calculates the comparative statics of trade frictions. We apply the method to solve the famous McCallum border puzzle. Applying our method, we find that national borders reduce trade between industrialized countries by moderate amounts of 20-50 percent."}, {"e:author": ["Julie Agnew", "Pierluigi Balduzzi", "Annika Sundn"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455223", "e:keyword": [], "e:pages": "193-215", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455223", "e:year": 2003, "e:title": "Portfolio Choice and Trading in a Large 401(k) Plan", "e:journal": "American Economic Review", "e:abstract": "We study nearly 7,000 retirement accounts during the April 1994-August 1998 period. Several interesting patterns emerge. Most asset allocations are extreme (either 100 percent or zero percent in equities) and there is inertia in asset allocations. Equity allocations are higher for males, married investors, and for investors with higher earnings and more seniority on the job; equity allocations are lower for older investors. There is very limited portfolio reshuffling, in sharp contrast to discount brokerage accounts. Daily changes in equity allocations correlate only weakly with same-day equity returns and do not correlate with future equity returns."}, {"e:author": ["Bentley W. MacLeod"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455232", "e:keyword": [], "e:pages": "216-240", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455232", "e:year": 2003, "e:title": "Optimal Contracting with Subjective Evaluation", "e:journal": "American Economic Review", "e:abstract": "This paper extends the standard principal-agent model to allow for subjective evaluation. The optimal contract results in more compressed pay relative to the case with verifiable performance measures. Moreover, discrimination against an individual implies lower pay and performance, suggesting that the extent of discrimination as measured after controlling for performance may underestimate the level of true discrimination. Finally, the optimal contract entails the use of bonus pay rather than the threat of dismissal, hence neither \"efficiency wages\" nor the right to dismiss an employee are necessary ingredients for an optimal incentive contract."}, {"e:author": ["Nicolas Marceau", "Michael Smart"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455241", "e:keyword": [], "e:pages": "241-251", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455241", "e:year": 2003, "e:title": "Corporate Lobbying and Commitment Failure in Capital Taxation", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["John Komlos"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455250", "e:keyword": [], "e:pages": "252-255", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455250", "e:year": 2003, "e:title": "Access to Food and the Biological Standard of Living: Perspectives on the Nutritional Status of Native Americans", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Sanjay Jain", "Sharun W. Mukand"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455269", "e:keyword": [], "e:pages": "256-264", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455269", "e:year": 2003, "e:title": "Redistributive Promises and the Adoption of Economic Reform", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Carl Walsh"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455278", "e:keyword": [], "e:pages": "265-278", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455278", "e:year": 2003, "e:title": "Speed Limit Policies: The Output Gap and Optimal Monetary Policy", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Susan M. Dynarski"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455287", "e:keyword": [], "e:pages": "279-288", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455287", "e:year": 2003, "e:title": "Does Aid Matter? Measuring the Effect of Student Aid on College Attendance and Completion", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Victor A. Ginsburgh", "Jan C. van Ours"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455296", "e:keyword": [], "e:pages": "289-296", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455296", "e:year": 2003, "e:title": "Expert Opinion and Compensation: Evidence from a Musical Competition", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Eugenio J. Miravete"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455304", "e:keyword": [], "e:pages": "297-310", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455304", "e:year": 2003, "e:title": "Choosing the Wrong Calling Plan? Ignorance and Learning", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Chao Wei"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455313", "e:keyword": [], "e:pages": "311-323", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455313", "e:year": 2003, "e:title": "Energy, the Stock Market, and the Putty-Clay Investment Model", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Mark J. Kamstra", "Lisa A. Kramer", "Maurice D. Levi"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455322", "e:keyword": [], "e:pages": "324-343", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455322", "e:year": 2003, "e:title": "Winter Blues: A SAD Stock Market Cycle", "e:journal": "American Economic Review", "e:issue": "1"}, {"e:author": ["Christopher M. Meissner"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455331", "e:keyword": [], "e:pages": "344-353", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455331", "e:year": 2003, "e:title": "Exchange-Rate Regimes and International Trade: Evidence from the Classical Gold Standard Era", "e:journ