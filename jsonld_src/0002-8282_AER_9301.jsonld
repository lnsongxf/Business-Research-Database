d": [], "e:pages": "456-457", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455421", "e:year": 2003, "e:title": "Organizational Design and Technology Choice under Intrafirm Bargaining: Reply", "e:journal": "American Economic Review", "e:abstract": ""}, {"e:author": ["Edoh Y. Amiran", "Daniel A. Hagen"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455430", "e:keyword": [], "e:pages": "458-463", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455430", "e:year": 2003, "e:title": "Willingness To Pay and Willingness To Accept: How Much Can They Differ? Comment", "e:journal": "American Economic Review", "e:abstract": ""}, {"e:author": ["W. Michael Hanemann"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455449", "e:keyword": [], "e:pages": "464-464", "e:issn": "0002-8282", "e:issue": "1", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803321455449", "e:year": 2003, "e:title": "Willingness To Pay and Willingness To Accept: How Much Can They Differ? Reply", "e:journal": "American Economic Review", "e:abstract": ""}]