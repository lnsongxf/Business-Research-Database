[{"e:author": ["Vernon L. Smith"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156954", "e:keyword": [], "e:pages": "465-508", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156954", "e:year": 2003, "e:title": "Constructivist and Ecological Rationality in Economics", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Ilya Segal"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156963", "e:keyword": [], "e:pages": "509-529", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156963", "e:year": 2003, "e:title": "Optimal Pricing Mechanisms with Unknown Demand", "e:journal": "American Economic Review", "e:abstract": "The standard profit-maximizing multiunit auction intersects the submitted demand curve with a preset reservation supply curve, which is determined using the distribution from which the buyers' valuations are drawn. However, when this distribution is unknown, a preset supply curve cannot maximize monopoly profits. The optimal pricing mechanism in this situation sets a price for each buyer on the basis of the demand distribution inferred statistically from other buyers' bids. The resulting profit converges to the optimal monopoly profit with known demand as the number of buyers goes to infinity, and convergence can be substantially faster than with sequential price experimentation."}, {"e:author": ["Patrick Francois", "Huw Lloyd-Ellis"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156972", "e:keyword": [], "e:pages": "530-550", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156972", "e:year": 2003, "e:title": "Animal Spirits Through Creative Destruction", "e:journal": "American Economic Review", "e:abstract": "We show how a Schumpeterian process of creative destruction can induce rational, herd behavior by entrepreneurs across diverse sectors as if fueled by \"animal spirits.\" Consequently, a multisector economy, in which productivity improvements are made by independent, profit-seeking entrepreneurs, exhibits regular booms, slowdowns, and downturns as part of the long-run growth process. Our cyclical equilibrium has higher average growth, but lower welfare than the corresponding acyclical one. We show how a negative relationship can emerge between volatility and growth across cycling economies, and assess the extent to which our model matches several features of actual business cycles."}, {"e:author": ["George P. Baker", "Thomas N. Hubbard"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156981", "e:keyword": [], "e:pages": "551-572", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156981", "e:year": 2003, "e:title": "Make Versus Buy in Trucking: Asset Ownership, Job Design, and Information", "e:journal": "American Economic Review", "e:abstract": "Explaining patterns of asset ownership is a central goal of both organizational economics and industrial organization. We develop a model of asset ownership in trucking, which we test by examining how the adoption of different classes of on-board computers (OBCs) between 1987 and 1997 influenced whether shippers use their own trucks for hauls or contract with for-hire carriers. We find that OBCs' incentive-improving features pushed hauls toward private carriage, but their resource-allocation-improving features pushed them toward for-hire carriage. We conclude that ownership patterns in trucking reflect the importance of both incomplete contracts and of job design and measurement issues."}, {"e:author": ["Paul Beaudry", "David A. Green"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156990", "e:keyword": [], "e:pages": "573-602", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322156990", "e:year": 2003, "e:title": "Wages and Employment in the United States and Germany: What Explains the Differences?", "e:journal": "American Economic Review", "e:abstract": "Over the last 20 years the wage-education relationships in the United States and Germany have evolved very differently, while the education compositions of employment have evolved in a parallel fashion. In this paper, we show how these patterns shed light on the nature of recent technological change and highlight the importance of taking into account movements in the ratio of human capital to physical capital when examining changes in the returns to skill. Our analysis indicates that the United States could have prevented the increase in wage inequality observed in the 1980's by a faster accumulation of physical capital."}, {"e:author": ["Christophe Chamley"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157007", "e:keyword": [], "e:pages": "603-621", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157007", "e:year": 2003, "e:title": "Dynamic Speculative Attacks", "e:journal": "American Economic Review", "e:abstract": "This paper presents a model of rational Bayesian agents with speculative attacks in a regime of exchange rate which is pegged within a band. Speculators learn from the observation of the exchange rate within the band whether their mass is sufficiently large for a successful attack. Multiple periods are necessary for the existence of speculative attacks. Various defense policies are analyzed. A trading policy by the central bank may defend the peg if it is unobserved and diminishes the market's information for the coordination of speculators."}, {"e:author": ["Andrew Levin", "Volker Wieland", "John C. Williams"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157016", "e:keyword": [], "e:pages": "622-645", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157016", "e:year": 2003, "e:title": "The Performance of Forecast-Based Monetary Policy Rules Under Model Uncertainty", "e:journal": "American Economic Review", "e:abstract": "We investigate the performance of forecast-based monetary policy rules using five macroeconomic models that reflect a wide range of views on aggregate dynamics. We identify the key characteristics of rules that are robust to model uncertainty; such rules respond to the one-year-ahead inflation forecast and to the current output gap and incorporate a substantial degree of policy inertia. In contrast, rules with longer forecast horizons are less robust and are prone to generating indeterminacy. Finally, we identify a robust benchmark rule that performs very well in all five models over a wide range of policy preferences."}, {"e:author": ["Yeon-Koo Che", "Ian Gale"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157025", "e:keyword": [], "e:pages": "646-671", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157025", "e:year": 2003, "e:title": "Optimal Design of Research Contests", "e:journal": "American Economic Review", "e:abstract": "Procurement of an innovation often requires substantial effort by potential suppliers. Motivating effort may be difficult if the level of effort and quality of the resulting innovation are unverifiable, if innovators cannot benefit directly by marketing their innovations, and if the buyer cannot extract up-front payments from suppliers. We study the use of contests to procure an innovation in such an environment. An auction in which two suppliers are invited to innovate and then bid their prizes is optimal in a large class of contests. If contestants are asymmetric, it is optimal to handicap the most efficient one."}, {"e:author": ["James Andreoni", "Marco Castillo", "Ragan Petrie"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157034", "e:keyword": [], "e:pages": "672-685", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157034", "e:year": 2003, "e:title": "What Do Bargainers' Preferences Look Like? Experiments with a Convex Ultimatum Game", "e:journal": "American Economic Review", "e:abstract": "The ultimatum game, by its all-or-nothing nature, makes it difficult to discern what kind of preferences may be generating choices. We explore a game that convexifies the decisions, allowing us a better look at the indifference curves of bargainers while maintaining the subgame-perfect equilibrium. We conclude that bargainers' preferences are convex and regular but not always monotonic. Money-maximization is the sole concern for about half of the subjects, while the other half reveal a preference for fairness. We also found, unexpectedly, the importance of risk aversion among money-maximizing proposers, which in turn generates significant bargaining power for fair-minded responders."}, {"e:author": ["Peter K. Schott"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157043", "e:keyword": [], "e:pages": "686-708", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157043", "e:year": 2003, "e:title": "One Size Fits All? Heckscher-Ohlin Specialization in Global Production", "e:journal": "American Economic Review", "e:abstract": "This paper introduces a new technique for testing the Heckscher-Ohlin model that allows for the possibility that countries with sufficiently disparate endowments specialize in unique subsets of goods. Results based upon industry-level data reject one-size-fits-all homogeneity in favor of Heckscher-Ohlin specialization. Results also reveal that industry-level data hide substantial intra-industry heterogeneity, violating the assumptions of the model and complicating the interpretation of results from earlier research. A methodology for adjusting industry output to reflect underlying product variation is introduced. Reestimation of the model using adjusted aggregates in place of standard industry classifications provides strong support for Heckscher-Ohlin specialization."}, {"e:author": ["Mathias Thoenig", "Thierry Verdier"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157052", "e:keyword": [], "e:pages": "709-728", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157052", "e:year": 2003, "e:title": "A Theory of Defensive Skill-Biased Innovation and Globalization", "e:journal": "American Economic Review", "e:abstract": "This paper considers a dynamic model of innovations in which firms can endogenously bias the direction of technological change. Both in a North-North and North-South context, we show that, when globalization triggers an increased threat of technological leapfrogging or imitation, firms tend to respond to that threat by biasing the direction of their innovations towards skilled-labor-intensive technologies. We show that this process of defensive skill-biased innovations generates an increase in wage inequalities in both regions. We then discuss suggestive empirical evidence of the existence of defensive skill-biased technical change."}, {"e:author": ["Atila Abdulkadiroglu", "Tayfun Snmez"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157061", "e:keyword": [], "e:pages": "729-747", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157061", "e:year": 2003, "e:title": "School Choice: A Mechanism Design Approach", "e:journal": "American Economic Review", "e:abstract": "A central issue in school choice is the design of a student assignment mechanism. Education literature provides guidance for the design of such mechanisms but does not offer specific mechanisms. The flaws in the existing school choice plans result in appeals by unsatisfied parents. We formulate the school choice problem as a mechanism design problem and analyze some of the existing school choice plans including those in Boston, Columbus, Minneapolis, and Seattle. We show that these existing plans have serious shortcomings, and offer two alternative mechanisms each of which may provide a practical solution to some critical school choice issues."}, {"e:author": ["Justin P. Johnson", "David P. Myatt"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157070", "e:keyword": [], "e:pages": "748-774", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157070", "e:year": 2003, "e:title": "Multiproduct Quality Competition: Fighting Brands and Product Line Pruning", "e:journal": "American Economic Review", "e:abstract": "Firms selling multiple quality-differentiated products frequently alter their product lines when a competitor enters the market. We present a model of multiproduct monopoly and duopoly using a general \"upgrades\" approach that yields a powerful analytical framework. We provide an explanation for the common strategies of using \"fighting brands\" and of product line \"pruning.\" The optimal strategy depends on whether entry prompts an incumbent to expand or contract its total output. We also present a general condition that guarantees that a monopolist will sell but a single product. Our model addresses other issues, including intertemporal price discrimination and \"damaged goods.\""}, {"e:author": ["James E. Rauch", "Vitor Trindade"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157089", "e:keyword": [], "e:pages": "775-791", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157089", "e:year": 2003, "e:title": "Information, International Substitutability, and Globalization", "e:journal": "American Economic Review", "e:abstract": "Improved information allows home firms to rule out more potential foreign trade partners in advance of attempting to form a match. The increased responsiveness to country wage or goods price differentials resulting from this better first cut causes the general-equilibrium elasticity of substitution between national labor forces or the Armington elasticity of substitution between domestic and imported output to increase. Further results include an increase in the elasticity of domestic labor demand, an increase in the extent to which reductions in conventional trade barriers equalize national wages, and reduced \"natural protection\" for domestic producers."}, {"e:author": ["James Andreoni", "A. Abigail Payne"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157098", "e:keyword": [], "e:pages": "792-812", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157098", "e:year": 2003, "e:title": "Do Government Grants to Private Charities Crowd Out Giving or Fund-raising?", "e:journal": "American Economic Review", "e:abstract": "Economists have long observed that crowding out of government grants to private charities is incomplete. The accepted belief is that givers treat the grants as imperfect substitutes for private giving. We theoretically and empirically investigate a second reason: the strategic response of a charity will be to reduce fund-raising efforts after receiving a grant. Employing panel data from arts and social service organizations, we find that government grants cause significant reductions in fund-raising. This adds a new dimension to the policy discussions - analysts should account for the behavioral responses of the charity, as well as the donors, to government grants."}, {"e:author": ["Antonio Rangel"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157106", "e:keyword": [], "e:pages": "813-834", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157106", "e:year": 2003, "e:title": "Forward and Backward Intergenerational Goods: Why Is Social Security Good for the Environment?", "e:journal": "American Economic Review", "e:abstract": "This paper studies the ability of nonmarket institutions to invest optimally in forward intergenerational goods (FIGs), such as education and the environment, when agents are selfish or exhibit paternalistic altruism. We show that backward intergenerational goods (BIGs), such as social security, play a crucial role in sustaining investment in FIGs: without them investment is inefficiently low, but with them optimal investment is possible. We also show that making the provision of BIGs mandatory crowds out the voluntary provision of FIGs, and that population aging can increase investment in FIGs."}, {"e:author": ["Jonathan Levin"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157115", "e:keyword": [], "e:pages": "835-857", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157115", "e:year": 2003, "e:title": "Relational Incentive Contracts", "e:journal": "American Economic Review", "e:abstract": "Standard incentive theory models provide a rich framework for studying informational problems but assume that contracts can be perfectly enforced. This paper studies the design of self-enforced relational contracts. I show that optimal contracts often can take a simple stationary form, but that self-enforcement restricts promised compensation and affects incentive provision. With hidden information, it may be optimal for an agent to supply the same inefficient effort regardless of cost conditions. With moral hazard, optimal contracts involve just two levels of compensation. This is true even if performance measures are subjective, in which case optimal contracts terminate following poor performance."}, {"e:author": ["Jimmy Chan", "Erik Eyster"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157124", "e:keyword": [], "e:pages": "858-872", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157124", "e:year": 2003, "e:title": "Does Banning Affirmative Action Lower College Student Quality?", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["B. D. McCullough", "H. D. Vinod"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157133", "e:keyword": [], "e:pages": "873-892", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157133", "e:year": 2003, "e:title": "Verifying the Solution from a Nonlinear Solver: A Case Study", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["James Andreoni", "William Harbaugh", "Lise Vesterlund"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157142", "e:keyword": [], "e:pages": "893-902", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157142", "e:year": 2003, "e:title": "The Carrot or the Stick: Rewards, Punishments, and Cooperation", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Sebnem Kalemli-Ozcan", "Bent E. Srensen", "Oved Yosha"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157151", "e:keyword": [], "e:pages": "903-918", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157151", "e:year": 2003, "e:title": "Risk Sharing and Industrial Specialization: Regional and International Evidence", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["William P. Rogerson"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157160", "e:keyword": [], "e:pages": "919-926", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157160", "e:year": 2003, "e:title": "Simple Menus of Contracts in Cost-Based Procurement and Regulation", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Neng Wang"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157179", "e:keyword": [], "e:pages": "927-936", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157179", "e:year": 2003, "e:title": "Caballero Meets Bewley: The Permanent-Income Hypothesis in General Equilibrium", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Charles W. Calomiris", "Joseph R. Mason"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157188", "e:keyword": [], "e:pages": "937-947", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157188", "e:year": 2003, "e:title": "Consequences of Bank Distress During the Great Depression", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Ignacio Palacios-Huerta"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157197", "e:keyword": [], "e:pages": "948-964", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157197", "e:year": 2003, "e:title": "An Empirical Analysis of the Risk Properties of Human Capital Returns", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Owen R. Phillips", "Dale J. Menkhaus", "Kalyn T. Coatney"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157205", "e:keyword": [], "e:pages": "965-979", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157205", "e:year": 2003, "e:title": "Collusive Practices in Repeated English Auctions: Experimental Evidence on Bidding Rings", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["Bruce A. Blonigen", "Ronald B. Davies", "Keith Head"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157214", "e:keyword": [], "e:pages": "980-994", "e:issn": "0002-8282", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157214", "e:year": 2003, "e:title": "Estimating the Knowledge-Capital Model of the Multinational Enterprise: Comment", "e:journal": "American Economic Review", "e:issue": "3"}, {"e:author": ["David L. Carr", "James R. Markusen", "Keith E. Maskus"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157223", "e:keyword": [], "e:pages": "995-1001", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157223", "e:year": 2003, "e:title": "Estimating the Knowledge-Capital Model of the Multinational Enterprise: Reply", "e:journal": "American Economic Review", "e:abstract": ""}, {"e:author": ["Haim Shalit", "Shlomo Yitzhaki"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157232", "e:keyword": [], "e:pages": "1002-1008", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157232", "e:year": 2003, "e:title": "An Asset Allocation Puzzle: Comment", "e:journal": "American Economic Review", "e:abstract": ""}, {"e:author": ["Chol-Won Li"], "e:volume": "93", "e:url": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157241", "e:keyword": [], "e:pages": "1009-1017", "e:issn": "0002-8282", "e:issue": "3", "e:doi": "http://www.aeaweb.org/articles.php?doi=10.1257/000282803322157241", "e:year": 2003, "e:title": "Endogenous Growth Without Scale Effects: Comment", "e:journal": "American Economic Review", "e:abstract": ""}]