append styles
	link(href='../css/starter-template.css', rel='stylesheet')
block body
	+navbar-fixed("","navbar","inverse")
		+nav_item("/","active") Journals
		+nav_item("/search") Search
		+nav_item("mailto:moqri@ufl.edu") Contact
	.container
		.starter-template
			h1 Business Research Database
			h4 Based on: 
				a(href='https://www.ft.com/content/3405a512-5cbb-11e1-8f1f-00144feabdc0') Financial Times Top Business Journals

		.subject_journals
			for res in qres
				-var subject=res.subject
				-var journals=res.journals
				h4 
					=subject
				lu
				for journal in journals
					-var source=journal['journal']
					-var source_enc=encodeURIComponent(source)
					li
						a(href='source?source='+source_enc)
							=source
						br
